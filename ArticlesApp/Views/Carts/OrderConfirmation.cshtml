@model OnlineShopApp.Models.Order

<h2 class="text-center mt-4">Confirmare comanda</h2>

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg" style="max-width: 700px; background: rgba(255, 255, 255, 0.9); border: none;">
        <div class="card-body text-center p-5">
            <h4 class="text-success fw-bold">Multumim pentru comanda data!</h4>
            <p class="text-muted">Aceasta a fost plasata si va ajunge la tine in cel mai scurt timp.</p>
            <div class="mt-4">
                <h5 class="fw-bold">Detalii comanda</h5>
                <p><strong>ID:</strong> @Model.Id</p>
                <p><strong>Data:</strong> @Model.Date.ToString("f")</p>
                <p><strong>Pret total:</strong> €@Model.TotalPrice</p>
            </div>
            <a href="/Products" class="btn btn-primary mt-3 px-5 py-2">Inapoi la pagina principala</a>
        </div>
    </div>
</div>

<style>
    body {
        background: url('/images/background-confirm.jpg') no-repeat center fixed;
        background-size: cover;
        font-family: 'Montserrat', sans-serif;
        color: #2c2c2c;
        margin: 0;
        padding: 0;
        line-height: 1.6;
    }

    h2 {
        margin-top: 20px;
        color: #FDA118;
        font-size: 2.5rem;
        font-weight: bold;
    }

    .card {
        border-radius: 15px;
        box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.15);
    }

        .card h4 {
            font-size: 1.8rem;
            margin-bottom: 15px;
        }

        .card p {
            font-size: 1rem;
        }

    .btn-primary {
        background-color: #007bff;
        border: none;
        font-size: 1.2rem;
        font-weight: bold;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }
</style>
