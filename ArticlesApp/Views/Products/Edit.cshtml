@model ArticlesApp.Models.Product

<h2 class="text-center mt-5">Editare produs</h2>
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-3">
            <form asp-action="Edit" asp-route-id="@Model.Id" asp-controller="Products" enctype="multipart/form-data" method="post">
                <div class="form-group">
                    <label asp-for="Title" class="form-label">Titlu Produs</label>
                    <br />
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <br /><br />
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="form-label">Descriere Produs</label>
                    <br />
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <br /><br />
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="form-label">Pret Produs</label>
                    <br />
                    <input asp-for="Price" class="form-control">
                    <span asp-validation-for="Price" class="text-danger"></span>
                    <br /><br />
                </div>
                <div class="form-group">
                    <label asp-for="Stock" class="form-label">Stock Produs</label>
                    <br />
                    <input asp-for="Stock" class="form-control">
                    <span asp-validation-for="Stock" class="text-danger"></span>
                    <br /><br />
                </div>
                <div class="form-group">
                    <label for="CategoryId">Selectati categoria</label>
                    <br />
                    <select asp-for="CategoryId" asp-items="Model.Categ" class="form-control">
                        <option value="">Selectati categoria</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                    <br />
                </div>
                <button class="btn btn-sm btn-success" type="submit">Modifica produs</button>
            </form>
            
        </div>
    </div>
</div>